import java.util.*;
import java.io.*;

public class Main {
    public static void main(String[] args) throws IOException{
        Scanner ob = new Scanner(System.in);
        int n, cifras;        
        do{
            System.out.print("Introduce un número");
            n = ob.nextInt();
            cifras= 0;
            while(n!=0){
                    n = n/10;
                   cifras++;
            }
            System.out.println("El número tiene " + cifras+ " cifras");
    }
}
